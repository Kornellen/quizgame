generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model Quest {
  id Int @default(autoincrement())
  content String
  answers Answer[]

  @@index([id])
  @@id([id])
}

model Answer {
  id Int @default(autoincrement())
  content String
  isCorrect Boolean
  questId Int
  quest Quest @relation(fields: [questId], references: [id])

  @@index([id])
  @@id([id])
}
